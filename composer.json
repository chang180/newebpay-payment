{
    "name": "newebpay/newebpay-payment",
    "description": "藍新金流 WooCommerce 付款閘道外掛",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "NeWebPay Payment Team",
            "email": "support@newebpay.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-coding-standards/wpcs": "^2.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "scripts": {
        "test": "php tests/standalone-test.php",
        "test:unit": "phpunit",
        "test:wordpress": "phpunit --bootstrap tests/bootstrap.php",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "phpcs": "phpcs --standard=WordPress tests/ includes/",
        "phpcbf": "phpcbf --standard=WordPress tests/ includes/",
        "test:setup": "echo 'WordPress test framework setup - use test:wordpress for full WordPress tests'"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
